<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="false">

  <servlet>
    <servlet-name>infor</servlet-name>
    <servlet-class>services.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>infor</servlet-name>
    <url-pattern>/createinfor</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>services.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/logininfor</url-pattern>
  </servlet-mapping>
<!--文章界面-->
  <servlet>
    <servlet-name>art</servlet-name>
    <servlet-class>services.ArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>art</servlet-name>
    <url-pattern>/art</url-pattern>
  </servlet-mapping>
</web-app>