<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.ordersys.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.ordersys.model.UserInfo">
        <id property="id" column="id"></id>
        <result property="username" column="username"></result>
    </resultMap>
    <insert id="register" >
        insert into userinfo (username,password,isadmin) values (#{username},#{password},0)
    </insert>
    <select id="getUserList" resultType="com.example.demo.ordersys.model.UserInfo">
        select * from userinfo
    </select>
    <select id="login" resultType="com.example.demo.ordersys.model.UserInfo">
        select * from userinfo where username=#{username} and password=#{password}
    </select>

</mapper>